}

bar {
  i3bar_command i3bar --transparency
  output VIRTUAL-RIGHT
  position top
  status_command SCRIPT_DIR=~/.config/i3blocks/scripts i3blocks -c ~/.config/i3blocks/config-right
  padding 0px 15px 0px 10px
