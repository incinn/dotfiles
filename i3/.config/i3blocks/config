# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
# Change $SCRIPT_DIR to the location of your scripts!

command=$SCRIPT_DIR/$BLOCK_NAME
separator_block_width=20
markup=none

[keyindicator]
KEY=CAPS
markup=pango
interval=3
signal=11
TEXT_OFF= 
separator=false

[bandwidth]
interval=2
INLABEL= 
OUTLABEL= 

[mediaplayer]
label= 
command=$SCRIPT_DIR/mediaplayer
instance=spotify
interval=5
signal=10

[volume]
label= 
interval=once
signal=10

[memory]
label= 
interval=5
PERCENT=false

[cpu_usage]
label= 
interval=2
min_width=100%
T_WARN=50
T_CRIT=80
DECIMALS=0
separator=false
COLOR_NORMAL=#f8f8f2
COLOR_WARN=#ffb86c
COLOR_CRIT=#ff5555

[temperature]
label=
interval=2

[gpu_usage]
label= 
interval=2
min_width=100%
separator=false

[gpu_temp]
label=
interval=2

[calendar]
command=$SCRIPT_DIR/calendar
interval=1
LABEL=  
DATEFMT=+%A %d %B %H:%M:%S

